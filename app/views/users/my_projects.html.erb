<div class="well center span10 offset1 top">
  <h1><%= gravatar_for @user %> My Projects | <%= @user.name %></h1>
</div>

<div class="row-fluid">
                <div class="span10 offset1 well">
      <%= grid(@tasks_grid2, show_filters: :always) do |g|
         
                 g.column name: 'Project Name', attribute: 'project_name', auto_reload: true do |p|
                   p.project_name
                 end

                 g.column name: 'Delivery Date', attribute: 'delivery_date', helper_style: :datepicker do |p|
                   p.delivery_date
                   end


                   g.column name: 'Total Hours', attribute: 'hours', auto_reload: true do |p|
           p.hours
         end

         g.column name: 'Spoilage', attribute: 'spoilage', auto_reload: true do |p|
           p.spoilage
         end

         g.column name: 'PN', attribute: 'project_number', auto_reload: true do |p|
           p.project_number
         end

         g.column name: 'SLA Accuracy', attribute: 'sla_accuracy', auto_reload: true do |p|
           p.sla_accuracy
         end

         g.column name: 'Actual Accuracy', attribute: 'accuracy', auto_reload: true do |p|
           p.accuracy
         end
          
              end
          %>
                </div>
                 </div>

                 <div class="row-fluid">

<div class="span10 offset1 well charts2">
	<%= column_chart [
    		{name: "Actual Accuracy", data: @project_chart_arrays[:accuracy]},
    		{name: "SLA Accuracy", data: @project_chart_arrays[:sla_accuracy]},
    		{name: "Net Accuracy", data: @project_chart_arrays[:difference]}
      ],
  		library: {title: "Accuracy by Project", titleTextStyle: {fontSize: 20}, vAxis: {title: "Accuracy (%)", textStyle: {fontSize: 20}}, height: 300, hAxis: {title: "Project"}}
  	%>
</div>
</div>

<div class="row-fluid">

<div class="span10 offset1 well charts2 bottom">
<%= column_chart @project_chart_arrays[:spoilage], library: {title: "Spoilage by Project", titleTextStyle: {fontSize: 20}, vAxis: {title: "Spoilage ($)", textStyle: {fontSize: 20}}, height: 300, hAxis: {title: "Project"}}, colors: ["#345768"]%>
</div>

</div>