<div class="row-fluid">
<div class=" well center span10 offset1 top">
  <h1>CF Services | All Users</h1>
</div>
</div>

<div class="row-fluid">
<div class=" well center span10 offset1 bottom">
<h1>All users</h1>

<ul class="users span5 offset3">
  <% @users.each do |user| %>
    <li>
      <span class="pull-left"><%= gravatar_for user, size: 52%></span>
      <h4><%= link_to user.name, user, :class => "center"%></h4>
    </li>
  <% end %>
</ul>
</div>
</div>

