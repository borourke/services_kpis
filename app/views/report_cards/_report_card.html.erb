<fieldset>
<legend class="center">New Report Card Scoring</legend>
<%= simple_form_for(@report_card, html: {class: 'form-horizontal span6 offset2' }) do |f| %>
  <%= f.input :project_id, collection: Project.all.collect { |x| [x.project_name, x.id] }, include_blank: false, label: "Project Name" %>
  <%= f.input :type, collection: ["New Project", "Repeat Project"], default: "New Project", label: "Project Type" %>
  <%= f.input :user_id, collection: User.all, include_blank: false, label: "Services Member" %>
  	<%= f.input :report_card, as: :check_boxes, collection: [["CML - clear and coherent structure", "CML1"], ["CML - commented clearly", "CML2"], ["Tags - at least 5 in job", "Tags1"], ["Code - clean and re-usable", "Code1"], ["Code - scripted solution utilized if more efficient", "Code2"], ["Code - advanced scripting utilized", "Code3"], ["Instructions - clear and concise", "Instructions1"], ["Delivery - on or before agreed upon deadline", "Delivery1"], ["Delivery - all client docs completed", "Delivery2"], ["Communication - clear, professional AS and Sales communication", "Com1"], ["Accuracy - at or above client expectations", "Accuracy1"], ["Spoilage - low spoilage, high yield", "Spoilage1"], ["Project - complex, innovative problem solving", "Project1"], ["Bronze - best in class", "Bronze1"], ["Silver - best in class", "Silver1"], ["Gold - Best in class", "Gold1"]]%>
  <%= f.button :submit, class: "btn-info pull-right" %>
<% end %>
</fieldset>