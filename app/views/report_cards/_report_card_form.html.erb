<fieldset>
<%= simple_form_for(@report_card, html: {class: 'form-horizontal span6 offset2' }) do |f| %>
<legend class="center offset1">Report Card Info</legend>
  <%= f.input :project_id, collection: Project.all.collect { |x| [x.project_name, x.id] }, include_blank: false, label: "Project Name" %>
  <%= f.input :type, collection: ["New Project", "Repeat Project"], default: "New Project", label: "Project Type" %>
  <%= f.input :user_id, collection: User.all, include_blank: false, label: "Services Member" %>

  <legend class="center offset1">Job Scoring</legend>
  <%= f.input :cml_clean, label: "CML - Clean", as: :radio_buttons, collection:[["Yes", "Clean CML"], ["No", "no"], ["Not Applicable", "na"]], item_wrapper_class: 'inline' %>
  <%= f.input :cml_commented, label: "CML - Commented", as: :radio_buttons, collection:[["Yes", "Commented CML"], ["No", "no"], ["Not Applicable", "na"]], item_wrapper_class: 'inline' %>
  <%= f.input :instructions, label: "Instructions - Excellent", as: :radio_buttons, collection:[["Yes", "Excellent Instructions"], ["No", "no"], ["Not Applicable", "na"]], item_wrapper_class: 'inline' %>
  <%= f.input :tags, label: "Tags - Five", as: :radio_buttons, collection:[["Yes", "Five Tags"], ["No", "no"], ["Not Applicable", "na"]], item_wrapper_class: 'inline' %>

  <legend class="center offset1">Technical Scoring</legend>
  <%= f.input :code_clean, label: "Code - Clean", as: :radio_buttons, collection:[["Yes", "Clean Code"], ["No", "no"], ["Not Applicable", "na"]], item_wrapper_class: 'inline', input_html: { class: "tip", data: { toggle: 'tooltip', trigger: 'hover', title: 'This is a tooltip!' }} %>
  <%= f.input :code_utilized, label: "Code - Utilized", as: :radio_buttons, collection:[["Yes", "Utilized Code"], ["No", "no"], ["Not Applicable", "na"]], item_wrapper_class: 'inline' %>
  <%= f.input :code_advanced, label: "Code - Advanced", as: :radio_buttons, collection:[["Yes", "Advanced Code"], ["No", "no"], ["Not Applicable", "na"]], item_wrapper_class: 'inline' %>
  <%= f.input :complex_solution, label: "Project - Complex Problem Solving", as: :radio_buttons, collection:[["Yes", "Complex Problem Solving"], ["No", "no"], ["Not Applicable", "na"]], item_wrapper_class: 'inline' %>
  <legend class="center offset1">Delivery Scoring</legend>
  <%= f.input :delivery_timely, label: "Delivery - Timely", as: :radio_buttons, collection:[["Yes", "Timely Delivery"], ["No", "no"], ["Not Applicable", "na"]], item_wrapper_class: 'inline' %>
  <%= f.input :delivery_docs, label: "Delivery - Documents", as: :radio_buttons, collection:[["Yes", "All Documents Delivered"], ["No", "no"], ["Not Applicable", "na"]], item_wrapper_class: 'inline' %>
  <%= f.input :communication, label: "Communication - Excellent", as: :radio_buttons, collection:[["Yes", "Excellent Communication"], ["No", "no"], ["Not Applicable", "na"]], item_wrapper_class: 'inline' %>
  <%= f.input :accuracy, label: "Accuracy - High", as: :radio_buttons, collection:[["Yes", "High Accuracy"], ["No", "no"], ["Not Applicable", "na"]], item_wrapper_class: 'inline' %>
  <%= f.input :spoilage, label: "Spoilage - Low", as: :radio_buttons, collection:[["Yes", "Low Spoilage"], ["No", "no"], ["Not Applicable", "na"]], item_wrapper_class: 'inline' %>

   <legend class="center offset1">Overall Scoring</legend>
  <%= f.input :best_in_class, label: "Best In Class", as: :radio_buttons, collection:[["Gold", "gold"], ["Silver", "silver"], ["Bronze", "bronze"], ["No", "no"], ["Not Applicable", "na"]], item_wrapper_class: 'inline' %>
  <%= f.button :submit, class: "btn-primary pull-right" %>
<% end %>

</fieldset>