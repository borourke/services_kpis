<fieldset>
<legend class="center">Project Information</legend>
<%= simple_form_for(@project, html: {class: 'form-horizontal' }) do |f| %>
<%= render 'shared/project_error_messages' %>
  <%= f.input :project_name, placeholder: "eBay Human Judgment Rd 18" %>
  <%= f.input :team, collection: ["Business Data", "Content Generation", "SEO"], default: "Business Data" %>
  <%= f.input :delivery_date, as: :string, input_html: { class: 'date_picker' }, placeholder: "2014-01-28" %>
  <%= f.input :complexity, collection: ["Low", "Medium", "High"], default: "Low" %>
  <%= f.input :hours, placeholder: "25" %>
  <%= f.input :spoilage, label: "Spoilage in $", placeholder: "180" %>
  <%= f.input :project_number, placeholder: "PN447" %>
  <%= f.input :sla_accuracy, label: "SLA Accuracy %", placeholder: "90" %>
  <%= f.input :accuracy, label: "Accuracy %", placeholder: "94" %>
  <%= f.button :submit, class: "btn-primary pull-right" %>
<% end %>
</fieldset>