<fieldset>
<legend class="center">Project Information</legend>
<%= simple_form_for(@project, html: {class: 'span6 offset3 pull-left' }) do |f| %>
<%= render 'shared/project_error_messages' %>
  <%= f.input :project_name %>
  <%= f.input :team, collection: ["Business Data", "Content Generation", "SEO"], default: "Business Data" %>
  <%= f.input :delivery_date, as: :string, :input_html => { :class => 'date_picker' } %>
  <%= f.input :complexity, collection: ["Low", "Medium", "High"], default: "Low" %>
  <%= f.input :hours %>
  <%= f.input :spoilage %>
  <%= f.input :project_number %>
  <%= f.input :sla_accuracy, label: "SLA Accuracy" %>
  <%= f.input :accuracy %>
  <%= f.input :report_card, :as => :hidden, :input_html => { :value => 1 } %>
  <%= f.button :submit, class: "btn-success pull-right" %>
<% end %>
</fieldset>